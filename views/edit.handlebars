<div class="container my-5">
  <h3>修改餐廳資料-{{restaurant.name}}</h3>
  <form action="/restaurants/{{restaurant._id}}?_method=put" method="post">
    <div class="form-group">
      <label for="name" class="form-label">餐廳名稱</label>
      <input class="form-control" name="name" id="name" type="text" maxlength="20" value="{{restaurant.name}}" required>
    </div>

    <div class="form-group">
      <label for="name_en" class="form-label">餐廳英文名</label>
      <input class="form-control" name="name_en" id="name_en" type="text" maxlength="20" value="{{restaurant.name_en}}" required>
    </div>

    <div class="form-group">
      <label for="category" class="form-label">餐廳類別</label>
      <input list="category" class="form-control" name="category" value="{{restaurant.category}}">
      <datalist id="category">
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
        <option>美式</option>
        <option>酒吧</option>
        <option>咖啡</option>
      </datalist>
    </div>

    <div class="form-group">
      <label for="location" class="form-label">店家地址</label>
      <input class="form-control" name="location" id="location" type="text" maxlength="25" value="{{restaurant.location}}" required>
    </div>

    <div class="form-group">
      <label for="phone" class="form-label">電話號碼</label>
      <input class="form-control" name="phone" id="phone" type="text" maxlength="15" value="{{restaurant.phone}}" required>
    </div>

    <div class="form-group">
      <label for="rating" class="form-label">餐廳評分</label>
      <input class="form-control" name="rating" id="rating" type="text" value="{{restaurant.rating}}" required>
    </div>

    <div class="form-group">
      <label for="image" class="form-label">照片</label>
      <input class="form-control" name="image" id="image" type="text" value="{{restaurant.image}}" required>
    </div>

    <div class="form-group">
      <label for="google_map" class="form-label">google map 地圖</label>
      <input class="form-control" name="google_map" id="google_map" type="text" value="{{restaurant.google_map}}" required>
    </div>

    <div class="form-group">
      <label for="description">餐廳介紹</label>
      <textarea class="form-control" id="description" name="description" rows="3">{{restaurant.description}}</textarea>
    </div>

    <button type="submit" class="btn btn-outline-secondary">送出</button>

  </form>
</div>